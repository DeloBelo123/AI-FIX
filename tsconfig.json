{
    "compilerOptions": {
      "target": "ES2022",
      "module": "ESNext",
      "moduleResolution": "Node",
  
      "strict": true,
  
      "outDir": "dist",
  
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,
  
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true
    },
    "include": ["src", "tests"],
    "exclude": ["node_modules", "dist", "*.db", "*.sqlite", "sqlite-test"]
  }
  

